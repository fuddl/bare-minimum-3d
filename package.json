{
    "name": "@mithi/bare-minimum-3d",
    "version": "0.3.0",
    "description": "A small package to transform declared 3d data (points, polygons, lines) to 2d data. The output is intended to be fed to a `bare-minimum-2d` plot.",
    "main": "./lib/cjs/index.js",
    "module": "./lib/esm/index.js",
    "files": [
        "lib/"
    ],
    "scripts": {
        "test": "jest",
        "tsc": "tsc -p tsconfig.json && tsc -p tsconfig-cjs.json",
        "format": "npm run pre",
        "prepublishOnly": "npm run tsc",
        "check-format": "prettier --config ./.prettierrc.yaml --check \"./src/*\""
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/mithi/bare-minimum-3d.git"
    },
    "keywords": [
        "data",
        "data-visualization",
        "graph",
        "plot",
        "3d",
        "3d-scatter-plot",
        "visualization",
        "svg",
        "plotly",
        "d3",
        "matplotlib"
    ],
    "author": "Mithi",
    "license": "Apache License 2.0",
    "bugs": {
        "url": "https://github.com/mithi/bare-minimum-3d/issues"
    },
    "homepage": "https://github.com/mithi/bare-minimum-3d#readme",
    "devDependencies": {
        "@types/jest": "^26.0.21",
        "coveralls": "^3.1.0",
        "jest": "^26.6.3",
        "prettier": "2.1.1",
        "ts-jest": "^26.2.0",
        "typescript": "^4.0.2"
    }
}
